<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy 11th Monthsary</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Inter:wght@300;500&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; overflow: hidden; background: #fff5f7; }
        .cursive { font-family: 'Dancing Script', cursive; }
        @keyframes float {
            0% { transform: translateY(100vh) scale(0); opacity: 0; }
            50% { opacity: 0.8; }
            100% { transform: translateY(-10vh) scale(1.5); opacity: 0; }
        }
        .heart { position: absolute; color: #ff8fa3; animation: float linear infinite; z-index: 0; }
        .pulse { animation: pulse 2s infinite; }
        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.2); opacity: 0.8; }
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen relative bg-gradient-to-b from-pink-50 to-pink-100">

    <div id="heart-container"></div>

    <main class="relative z-10 w-full max-w-[430px] px-6 text-center">
        
        <div class="relative mx-auto w-64 h-80 mb-8">
            <div class="absolute inset-0 bg-pink-300 rounded-3xl blur-2xl opacity-40 animate-pulse"></div>
            <div class="relative rounded-3xl overflow-hidden border-4 border-white shadow-2xl h-full">
                <img src="phoebbi.jpeg" alt="Phoebbi Kate" class="w-full h-full object-cover">
                <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-white text-6xl drop-shadow-lg pulse">❤️</span>
                </div>
            </div>
        </div>

        <h1 class="text-4xl text-rose-600 cursive mb-2">Happy 11th Monthsary,</h1>
        <h2 class="text-2xl font-bold text-gray-800 mb-6 tracking-tight">Phoebbi Kate D. Bazar</h2>
        
        <p class="text-gray-500 text-sm uppercase tracking-widest mb-4">Countdown to 1 Year</p>
        
        <div class="grid grid-cols-4 gap-2 bg-white/60 backdrop-blur-md p-4 rounded-2xl shadow-sm border border-pink-100">
            <div><span id="days" class="block text-xl font-bold text-rose-500">00</span><span class="text-[10px] text-gray-400 uppercase">Days</span></div>
            <div><span id="hours" class="block text-xl font-bold text-rose-500">00</span><span class="text-[10px] text-gray-400 uppercase">Hrs</span></div>
            <div><span id="minutes" class="block text-xl font-bold text-rose-500">00</span><span class="text-[10px] text-gray-400 uppercase">Min</span></div>
            <div><span id="seconds" class="block text-xl font-bold text-rose-500">00</span><span class="text-[10px] text-gray-400 uppercase">Sec</span></div>
        </div>
    </main>

    <script>
        // Generate floating hearts
        const container = document.getElementById('heart-container');
        for (let i = 0; i < 15; i++) {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = '❤️';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
            heart.style.fontSize = (Math.random() * 10 + 10) + 'px';
            container.appendChild(heart);
        }

        // Countdown Logic
        const targetDate = new Date("February 3, 2026 00:00:00").getTime();

        setInterval(() => {
            const now = new Date().getTime();
            const distance = targetDate - now;

            document.getElementById("days").innerText = Math.floor(distance / (1000 * 60 * 60 * 24));
            document.getElementById("hours").innerText = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            document.getElementById("minutes").innerText = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            document.getElementById("seconds").innerText = Math.floor((distance % (1000 * 60)) / 1000);
        }, 1000);
    </script>
</body>
</html>
